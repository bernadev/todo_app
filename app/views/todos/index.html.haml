.row-fluid
  .span12
    .page-header
      %h1 Listing Todos

.row-fluid
  .span12#todos_list
    %table.table.table-hover
      %thead
        %tr
          %th Title
          %th Description
          %th{:colspan => "3"}
      %tbody
        - @todos.each do |todo|
          %tr
            %td= todo.title
            %td= todo.notes
            %td= link_to 'Show', todo
            %td= link_to 'Edit', edit_todo_path(todo)
            %td= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }
    %br
    = link_to 'New Todo', new_todo_path
